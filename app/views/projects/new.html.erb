<h1>Create a new Project</h1>
<div class="row">
	<div class="col-md-12">
		<%= form_for(@project, :html => {class: "form-horizontal", role:"form"}) do |new|%>
			<div class="form-group">
				<%= new.label :name%>
				<%= new.text_field :name , class: "form-control" ,placeholder: "Enter name of Project", autofocus: true %>
			</div>

			<div class="form-group">
				<%= new.label :description%>
				<%= new.text_area :description ,rows: 10, class: "form-control" ,placeholder: "Enter Description of Project", autofocus: true %>
			</div>
			
			<div class="form-group">
				<%= new.submit class: "btn btn-primary btn-xlarge"%>
			</div>

		<% end %>
	</div>
</div>
<hr/>